#/bin/sh
REPO_PATH=$(dirname $(readlink -f $0));
# This is the place where the setup will be installed
INSTALL_DIR=/usr/local/lamp_dev_64 ;


if [ "$1" = 'start' ]; then
  echo "Starting mongo";
  $INSTALL_DIR/mongodb/bin/mongod -f $INSTALL_DIR/etc/mongodb.conf 
  
elif [ "$1" = 'stop' ]; then
  echo "Stopping Mongodb";
  $INSTALL_DIR/mongodb/bin/mongod -f $INSTALL_DIR/etc/mongodb.conf --shutdown
else  
  echo "invalid or no argument";
  echo "Usage: mongoctl {start|stop}";
  exit 1;
fi
  


